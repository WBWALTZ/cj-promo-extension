{
  "manifest_version": 3,
  "name": "CJ Promo Assistant",
  "version": "1.0",
  "description": "Boosts promotional efforts for CJ properties",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CJ Promo Tools"
  },
  "permissions": ["storage", "scripting"],
  "host_permissions": ["*://*.facebook.com/*"],
  "content_scripts": [{
    "matches": ["*://*.facebook.com/*"],
    "js": ["content.js"]
  }]
}
